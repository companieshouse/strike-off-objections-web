{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {},
  "rules": {
    "interface-name": false,
    "variable-name": [true, "check-format", "allow-leading-underscore"],
    "whitespace": [true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-typecast",
      "check-separator",
      "check-module",
      "check-type",
      "check-type-operator",
      "check-preblock"]
  },
  "linterOptions": {
    "exclude": [
      "src/public/stylesheets/**/*.scss",
      "src/public/stylesheets/**/*.css"
    ]
  },
  "rulesDirectory": []
}
